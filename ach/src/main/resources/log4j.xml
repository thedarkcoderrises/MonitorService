	<logger name="MasterTask" additivity="false">
	  <level value="DEBUG"/> 
	  <appender-ref ref="MasterTask" />
	</logger>
	
	<logger name="GiRecvTask" additivity="false">
	  <level value="DEBUG"/> 
	  <appender-ref ref="GiRecvTask" />
	</logger>
	<logger name="GiScrubTask" additivity="false">
