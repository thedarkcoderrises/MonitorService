	<logger name="com.citi" additivity="false">
	  <level value="DEBUG"/> 
	  <appender-ref ref="FILE" />
	</logger>
	<logger name="org.hibernate" additivity="false">
	  <level value="INFO"/> 
	  <appender-ref ref="FILE" /> 
	</logger>
	<logger name="org.hibernate.SQL" additivity="false">
